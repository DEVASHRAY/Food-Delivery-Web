{
    "name": "foodzy-backend",
    "version": "1.0.0",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon",
        "build": "rm -rf dist && tsc",
        "start": "node dist/server.js",
        "docker-dev": "docker compose up --build",
        "docker-start": "docker compose up -d",
        "docker-stop": "docker compose down",
        "docker-logs": "docker compose logs -f foodzy-dev",
        "docker-ps": "docker compose ps",
        "docker-clean": "docker compose down -v --rmi all"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^5.1.0",
        "mongoose": "^8.17.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.23",
        "@types/node": "^20.19.11",
        "nodemon": "^3.1.10",
        "pm2": "^5.4.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.6.3"
    }
}